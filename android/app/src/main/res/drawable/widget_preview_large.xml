<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#F5F5F5" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    
    <!-- Content area -->
    <item android:left="8dp" android:right="8dp" android:top="8dp" android:bottom="8dp">
        <layer-list>
            <!-- Header area -->
            <item android:bottom="120dp">
                <shape android:shape="rectangle">
                    <solid android:color="#E0E0E0" />
                    <corners android:radius="4dp" />
                </shape>
            </item>
            
            <!-- Blue content background (largest) -->
            <item android:top="35dp" android:bottom="25dp">
                <shape android:shape="rectangle">
                    <solid android:color="#2196F3" />
                    <corners android:radius="6dp" />
                </shape>
            </item>
            
            <!-- Text area placeholder (most space for content) -->
            <item android:left="20dp" android:right="20dp" android:top="45dp" android:bottom="35dp">
                <shape android:shape="rectangle">
                    <solid android:color="#FFFFFF" />
                    <corners android:radius="2dp" />
                </shape>
            </item>
            
            <!-- Footer area -->
            <item android:top="130dp">
                <shape android:shape="rectangle">
                    <solid android:color="#E0E0E0" />
                    <corners android:radius="4dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</layer-list> 