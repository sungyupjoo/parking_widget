<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background_white"
    android:orientation="horizontal"
    android:paddingHorizontal="14dp"
    android:paddingVertical="10dp"
    android:gravity="center_vertical">

    <!-- Left side: Icon + Title -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginEnd="12dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_parking_logo"
            android:layout_marginEnd="6dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주차 메모"
            android:textColor="#888888"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center_vertical" />

    </LinearLayout>

    <!-- Right side: Content area -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/widget_content_background_blue"
        android:padding="12dp"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/parking_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="위치 정보 없음"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center" />

        <!-- 저장 시간 -->
        <TextView
            android:id="@+id/saved_time_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#E0E0E0"
            android:textSize="10sp"
            android:gravity="center"
            android:visibility="gone"
            android:layout_marginTop="2dp" />

    </LinearLayout>

</LinearLayout> 
