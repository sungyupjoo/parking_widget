<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background_white"
    android:orientation="vertical"
    android:paddingHorizontal="10dp">

    <!-- 상단 헤더 (아이콘 + 타이틀 + 아이콘) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="12dp"
        android:paddingBottom="6dp"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_parking_logo"
                android:layout_marginEnd="2dp"
                android:layout_marginTop="1dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="주차 메모"
                android:textColor="#000000"
                android:textSize="10sp"
                android:textStyle="bold"
                android:gravity="center_vertical" />

        </LinearLayout>


    </LinearLayout>

    <!-- 하단 주차 위치 정보 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/widget_content_background_blue"
        android:padding="8dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/parking_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="위치 정보 없음"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginEnd="6dp" />

        
    </LinearLayout>

    <!-- Footer instruction -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >
    <!-- 저장 시간 -->
    <TextView
        android:id="@+id/saved_time_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#999999"
        android:textSize="10sp"
        android:visibility="gone"
        android:gravity="center"
        android:layout_marginBottom="2dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="터치하여 위치 입력"
        android:textSize="10sp"
        android:textColor="#888888"
        android:gravity="center" 
        android:layout_marginTop="2dp"/>

    </LinearLayout>

   
</LinearLayout>
