<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background_rounded"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- 상단 행: 로고 + 앱 이름 (왼쪽) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        >

        <!-- 작은 로고 + 앱 이름 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_parking_logo"
                android:layout_marginEnd="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="주차 메모"
                android:textColor="#E0E0E0"
                android:textSize="16sp"
                android:textStyle="normal" />

        </LinearLayout>
    </LinearLayout>

    <!-- 하단 행: 시간 + 위치 정보 (수직으로 가깝게) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="bottom|start">

        <!-- 저장 시간 -->
        <TextView
            android:id="@+id/saved_time_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="터치하여 위치 입력"
            android:textColor="#E0E0E0"
            android:textSize="12sp"
            android:gravity="start"
            android:visibility="visible"
            android:layout_marginBottom="4dp" />

        <!-- 위치 정보 (더 크고 뚜렷하게) -->
        <TextView
            android:id="@+id/parking_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="위치 정보 없음"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="start"
            android:lineSpacingExtra="1dp" />
    </LinearLayout>
</LinearLayout>