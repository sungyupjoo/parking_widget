<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/widget_background_white"
    android:padding="6dp"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="left|center_vertical"
        android:layout_marginBottom="6dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_parking_logo"
                android:layout_marginEnd="3dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="주차 메모"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:gravity="left" />

        </LinearLayout>

    </LinearLayout>

    <!-- Main parking location text -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/widget_content_background_blue"
        android:padding="8dp"
        android:orientation="vertical"
        android:gravity="center"
        android:minHeight="0dp">

        <TextView
            android:id="@+id/parking_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="위치 정보 없음"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:maxLines="2"
            android:ellipsize="end"
            android:lineSpacingExtra="1dp"
            android:layout_marginBottom="2dp" />

        <!-- Saved time within main content area -->
        <TextView
            android:id="@+id/saved_time_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#E0E0E0"
            android:textSize="10sp"
            android:gravity="center"
            android:visibility="gone" />

    </LinearLayout>

    <!-- Footer instruction -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="6dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="터치하여 위치 입력"
            android:textSize="10sp"
            android:textColor="#888888"
            android:gravity="center" />

    </LinearLayout>

</LinearLayout>
